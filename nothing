FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    bash \
    build-essential \
    default-libmysqlclient-dev \
    curl \
    default-mysql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Normalize line endings (in case files were edited on Windows) and make scripts executable
RUN sed -i 's/\r$//' /app/wait-for-db.sh /app/entrypoint.sh /app/init_db.sh \
    && chmod +x /app/wait-for-db.sh /app/entrypoint.sh /app/init_db.sh

# Create data directory for SQLite (if needed)
RUN mkdir -p /app/data /app/backups

# Expose port
EXPOSE 5000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:5000/ || exit 1

# Wait for database, initialize tables, then start application
CMD ["./wait-for-db.sh", "./entrypoint.sh", "gunicorn", "--bind", "0.0.0.0:5000", "--workers", "2", "--timeout", "120", "app:app"]
